<form
  id="contact-form"
  method="post"
  name="contact-form"
  data-netlify="true"
  data-netlify-honeypot="bot-field"
  action="/success"
>
  <input type="hidden" name="form-name" value="contact-form" />
  <label for="bot-field" hidden>
    Don't fill this out
    <input name="bot-field" type="text" />
  </label>
  <label for="name">
    Name
    <input name="name" type="text" required />
  </label>
  <label for="email">
    Email
    <input name="email" type="email" required />
  </label>
  <label for="message">
    Message
    <textarea name="message" rows="10" required></textarea>
  </label>
  <input
    type="submit"
    class="btn btn-yellow"
    value="Submit"
  />
</form>

<style>
  form {
    width: 100%;
  }
  form input,
  form textarea {
    width: 100%;
    box-sizing: border-box;
    border-width: 1px;
    border-radius: 3px;
    margin-bottom: var(--space-xl);
  }
  label {
    line-height: 1.5em;
  }
  form input[type="submit"] {
    margin: var(--space-xl) 0;
    margin-bottom: 0;
    max-width: var(--btn-width-wide);
    margin: auto;
  }
  form input[type="submit"]:hover {
    cursor: pointer;
  }
</style>
