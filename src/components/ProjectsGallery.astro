---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

const projects: CollectionEntry<"projects">[] = Astro.props.projects;
---
<ul class="project-card-container">
  {
    projects.length > 0 ? (
      projects.map((p) => {
        return (
          <li class="project-card">
            <a href={`/projects/${p.slug}`}>
              <div class="project-card-image-container">
                <Image src={p.data.image} alt={p.data.imageAltText} />
              </div>
              <div class="project-card-text-overlay">{p.data.title}</div>
            </a>
          </li>
        );
      })
    ) : (
      <p>No projects yet!</p>
    )
  }
</ul>

<style>
  .project-card-container {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2xl);
    max-width: var(--width-main-content);
    align-items: center;
    justify-content: center;
  }
  .project-card {
    list-style-type: none;
  }
  .project-card a {
    display: block;
    position: relative;
    width: 250px;
    height: 250px;
    text-decoration: none;
    color: var(--font-color-light);
    border-radius: var(--radius-md);
    overflow: hidden;
  }
  .project-card-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .project-card-image-container img {
    margin: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .project-card-text-overlay {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-shadow: var(--text-shadow);
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    text-align: center;
    background-color: #00000055;
  }
  .project-card-text-overlay:hover {
    background-color: #00000077;
  }
</style>
